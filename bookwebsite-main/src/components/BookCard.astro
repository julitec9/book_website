    .book-card.enlarged {
      /* Existing styles */
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 999;
      width: 500px;
      height: 700px;
      background-color: #121212;
      color: white;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .book-card.enlarged .content {
      top: 50%;
    }

    .book-card.enlarged .content {
      opacity: 1;
    }

    .dark-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      z-index: 998;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s linear 0.3s;
    }

    .dark-overlay.active {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease;
    }

    .close-button {
      display: none;
      background: none;
      border: none;
    }

    .book-card.enlarged .close-button {
      font-size: 1.5rem;
      color: white;
      display: block;
      position: absolute;
      top: 10px; /* Adjust the top position */
      right: 10px; /* Adjust the right position */
      z-index: 999; /* Ensure the button is on top of the enlarged card */
    }

    .book-card.enlarged .close-button:hover {
      color: aqua;
    }

    .book-card.enlarged img {
      filter: none;
      height: 50%;
      object-fit: cover;
      width: fill;
      margin-bottom: auto;
      position: relative;
      mask-image: linear-gradient(to top, #673e3e00 10%, #000000a6 100%);
    }

    .book-card.enlarged .content .description {
      font-size: 15px;
    }
  </style>

  <script>
    const bookCards = document.querySelectorAll(".book-card");
    const darkOverlay = document.querySelector(".dark-overlay");
    const body = document.querySelector("body");

    bookCards.forEach((card) => {
      card.addEventListener("click", () => {
        // Clone the clicked book card
        const clonedCard = card.cloneNode(true);

        // Toggle the 'enlarged' class on the cloned card
        clonedCard.classList.toggle("enlarged");

        // Disable scrolling on the normal mode
        body.style.overflow = "hidden";

        // Append the cloned card to the body
        document.body.appendChild(clonedCard);

        // Toggle the 'active' class on the dark overlay
        darkOverlay.classList.toggle("active");

        // Add event listener to the close button in the enlarged card
        const closeButton = clonedCard.querySelector(".close-button");
        closeButton.addEventListener("click", () => {
          // Remove the cloned card from the body
          clonedCard.remove();

          // Enable scrolling on the normal mode
          body.style.overflow = "auto";

          // Toggle the 'active' class on the dark overlay to return to default overlay
          darkOverlay.classList.toggle("active");
        });
      });
    });
  </script>


